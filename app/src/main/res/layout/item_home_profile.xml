<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_round_white"
    android:layout_width="match_parent"
    android:layout_marginTop="7dp"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_home_profile_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/profile_image_honbab"
            android:layout_gravity="center"
            android:foregroundGravity="center"/>

        <TextView
            android:id="@+id/item_home_profile_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="닉네임"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <Button
                android:id="@+id/item_home_profile_profile_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="프로필 보기"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/item_home_profile_match_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="수락"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>