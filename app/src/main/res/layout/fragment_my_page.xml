<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/my_page_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="21sp"
        android:paddingStart="15dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:background="@color/honbab_main_color"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/my_page_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="30dp"
        android:background="@color/honbab_main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_page_tv">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height= "120dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/kakao_editable_profile"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/my_page_info_ll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="닉네임"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="birth"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/my_page_info_ll">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:cardCornerRadius="20dp">

                <Button
                    android:id="@+id/locker_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:outlineProvider="none"
                    android:backgroundTint="@color/white"
                    android:textAlignment="center"
                    android:text="프로필 수정"
                    android:foregroundGravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/my_page_setting_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textAlignment="center"
                android:gravity="center"
                android:foregroundGravity="center"
                android:text="계정 관리"
                android:outlineProvider="none"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/layout_stroke_white"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/my_page_logout_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textAlignment="center"
                android:gravity="center"
                android:foregroundGravity="center"
                android:text="로그아웃"
                android:outlineProvider="none"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/layout_stroke_white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_page_ll2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/my_page_ll1"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:background="@drawable/layout_stroke"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/kakao_editable_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="매너온도"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="5dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"

            android:layout_weight="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:background="@drawable/layout_stroke"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/kakao_editable_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="매칭전적"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="5dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:layout_weight="1"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:background="@drawable/layout_stroke"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/kakao_editable_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="시그널 마커"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="5dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:background="@drawable/layout_stroke"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/kakao_editable_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="뱃지"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="5dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/my_page_setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/my_page_ll2"
        app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_round"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="6"
        app:layout_constraintTop_toBottomOf="@id/my_page_setting_tv"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/kakao_editable_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="차단목록 관리"
                android:textColor="#5E5E5E"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/kakao_editable_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="알림 설정"
                android:textColor="#5E5E5E"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/kakao_editable_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="차단목록 관리"
                android:textColor="#5E5E5E"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/kakao_editable_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="화면 설정"
                android:textColor="#5E5E5E"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/kakao_editable_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="공지사항"
                android:textColor="#5E5E5E"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/kakao_editable_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="의견 보내기"
                android:textColor="#5E5E5E"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>