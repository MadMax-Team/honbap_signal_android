<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:padding="5dp"
    android:weightSum="10"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/my_dm_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="오후 00:00"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_weight="7">
    //내가 보낸 메시지 내용
    <TextView
        android:id="@+id/my_dm_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@color/honbab_main_color"
        android:text="여기에 채팅내용이 들어가게 될텐데 길게 들어갈 수도 있어서 이렇게 테스트를 해보는 겁니다 하하하하하하하하하하하하하하하하하하하하하하"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    </androidx.cardview.widget.CardView>

</LinearLayout>


