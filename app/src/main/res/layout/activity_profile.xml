<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/profile_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/profile_nick_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="닉네임"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_nick_name_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_nick_name_et"
            app:layout_constraintStart_toStartOf="@id/profile_nick_name_et"
            app:layout_constraintTop_toBottomOf="@id/profile_nick_name_et"/>
        <ImageView
            android:id="@+id/profile_profile_img_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/basic_img"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/profile_nick_name_underscore_view"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/profile_profile_img_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 이미지"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@id/profile_profile_img_iv"
            app:layout_constraintTop_toTopOf="@id/profile_profile_img_iv"/>

        <Button
            android:id="@+id/profile_open_gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 찾아보기"
            android:layout_marginTop="15dp"

            android:backgroundTint="@color/honbab_main_color"
            app:layout_constraintTop_toBottomOf="@id/profile_profile_img_text_tv"
            app:layout_constraintStart_toStartOf="@id/profile_profile_img_text_tv"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>