<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profile_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/profile_nick_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="닉네임"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_nick_name_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_nick_name_et"
            app:layout_constraintStart_toStartOf="@id/profile_nick_name_et"
            app:layout_constraintTop_toBottomOf="@id/profile_nick_name_et"/>
        <ImageView
            android:id="@+id/profile_profile_img_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_image_144px"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/profile_nick_name_underscore_view"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/profile_profile_img_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 이미지"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@id/profile_profile_img_iv"
            app:layout_constraintTop_toTopOf="@id/profile_profile_img_iv"/>

        <Button
            android:id="@+id/profile_open_gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:backgroundTint="@color/honbab_main_color"
            android:text="사진 찾아보기"
            app:layout_constraintStart_toStartOf="@id/profile_profile_img_text_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_profile_img_text_tv" />

        <EditText
            android:id="@+id/profile_taste_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="선호 음식"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_profile_img_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_taste_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_taste_et"
            app:layout_constraintStart_toStartOf="@id/profile_taste_et"
            app:layout_constraintTop_toBottomOf="@id/profile_taste_et"/>

        <EditText
            android:id="@+id/profile_hate_food_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="비선호 음식"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_taste_underscore_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_hate_food_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_hate_food_et"
            app:layout_constraintStart_toStartOf="@id/profile_hate_food_et"
            app:layout_constraintTop_toBottomOf="@id/profile_hate_food_et"/>

        <EditText
            android:id="@+id/profile_interest_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="관심사"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_hate_food_underscore_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_interest_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_interest_et"
            app:layout_constraintStart_toStartOf="@id/profile_interest_et"
            app:layout_constraintTop_toBottomOf="@id/profile_interest_et"/>

        <EditText
            android:id="@+id/profile_avg_speed_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="평균 식사 속도"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_interest_underscore_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_avg_speed_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_avg_speed_et"
            app:layout_constraintStart_toStartOf="@id/profile_avg_speed_et"
            app:layout_constraintTop_toBottomOf="@id/profile_avg_speed_et"/>

        <EditText
            android:id="@+id/profile_prefer_area_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="선호 지역"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_avg_speed_underscore_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_prefer_area_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_prefer_area_et"
            app:layout_constraintStart_toStartOf="@id/profile_prefer_area_et"
            app:layout_constraintTop_toBottomOf="@id/profile_prefer_area_et"/>

        <EditText
            android:id="@+id/profile_mbti_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="MBTI"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_prefer_area_underscore_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_mbti_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_mbti_et"
            app:layout_constraintStart_toStartOf="@id/profile_mbti_et"
            app:layout_constraintTop_toBottomOf="@id/profile_mbti_et"/>

        <EditText
            android:id="@+id/profile_user_introduce_et"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:hint="소개글"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/profile_mbti_underscore_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/profile_user_introduce_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="@id/profile_user_introduce_et"
            app:layout_constraintStart_toStartOf="@id/profile_user_introduce_et"
            app:layout_constraintTop_toBottomOf="@id/profile_user_introduce_et"/>

        <TextView
            android:id="@+id/profile_sign_up_btn_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="가입완료"
            android:padding="10dp"
            android:gravity="center"
            android:background="#90ee90"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_user_introduce_underscore_view"/>

        <ProgressBar
            android:id="@+id/profile_loading_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:indeterminateTint="#90ee90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone" />









    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>