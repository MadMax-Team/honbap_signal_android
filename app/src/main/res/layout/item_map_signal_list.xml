<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutListItem"
    android:orientation="vertical"
    android:padding="10dp"
    android:backgroundTint="@color/honbab_main_color"
    android:background="@drawable/layout_item_map_list"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:elevation="5dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/item_map_signal_list_profile_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/default_profile"
            android:src="@drawable/default_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_map_signal_nickname_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고악"
        android:fontFamily="@font/pretendard_extra_bold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/item_map_signal_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나와 532m"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_map_signal_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:text="1분전"
            android:textSize="10sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/item_map_signal_tag1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/layout_item_map_list"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="#일식"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_map_signal_tag2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#샤브샤브"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/layout_item_map_list"/>

        <TextView
            android:id="@+id/item_map_signal_tag3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#회"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart = "5dp"
            android:background="@drawable/layout_item_map_list"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/item_map_signal_tag4_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#문화동"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/layout_item_map_list"/>

        <TextView
            android:id="@+id/item_map_signal_tag5_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#20대"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/layout_item_map_list"/>

    </LinearLayout>

</LinearLayout>