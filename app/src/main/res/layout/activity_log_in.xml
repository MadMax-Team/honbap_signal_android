<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/log_in_do_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="로그인 하기"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/log_in_need_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인이 필요합니다"
        android:textColor="#d3d3d3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/log_in_do_login_tv"
        android:layout_marginTop="150dp"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/log_in_id_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/edge"
        android:hint="이메일주소 또는 아이디"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/log_in_need_login_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="@null"/>
    <EditText
        android:id="@+id/log_in_pwd_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/edge"
        android:hint="패스워드"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/log_in_id_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="@null"/>
    <Button
        android:id="@+id/log_in_login_btn"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="로그인"
        android:background="@drawable/btn_edge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <CheckBox
        android:id="@+id/log_in_keep_login_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 상태 유지"
        app:layout_constraintTop_toBottomOf="@id/log_in_pwd_et"
        app:layout_constraintStart_toStartOf="@id/log_in_id_et"
        app:layout_constraintBottom_toTopOf="@id/log_in_login_btn" />
    <TextView
        android:id="@+id/log_in_find_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/log_in_login_btn"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/log_in_reset_pwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toStartOf="@id/log_in_sign_in_tv"
        app:layout_constraintTop_toBottomOf="@id/log_in_login_btn"
        app:layout_constraintStart_toEndOf="@id/log_in_find_id_tv"/>
    <TextView
        android:id="@+id/log_in_sign_in_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/log_in_login_btn"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/log_in_by_kakao_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="카카오로 시작"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edge"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/log_in_find_id_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/log_in_by_naver_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="네이버로 시작"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edge"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/log_in_by_kakao_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/log_in_by_facebook_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="페이스북으로 시작"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edge"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/log_in_by_naver_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>