<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    //이메일 아이디
    <TextView
        android:id="@+id/home_email_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 아이디"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_email_id_et" />

    <EditText
        android:id="@+id/home_email_id_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:background="@null"
        android:hint="회원가입시 등록한 이메일을 입력해주세요."
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/home_email_id_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/home_email_id_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/home_email_id_et"
        app:layout_constraintStart_toStartOf="@id/home_email_id_et"
        app:layout_constraintTop_toBottomOf="@id/home_email_id_et"/>
    //비밀번호
    <TextView
        android:id="@+id/home_pwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_email_id_underscore_view"
        app:layout_constraintStart_toStartOf="@id/home_email_id_et" />
    <EditText
        android:id="@+id/home_pwd_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:background="@null"
        android:hint="비밀번호를 입력해 주세요."
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/home_pwd_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/home_pwd_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/home_pwd_et"
        app:layout_constraintStart_toStartOf="@id/home_pwd_et"
        app:layout_constraintTop_toBottomOf="@id/home_pwd_et"/>
    <TextView
        android:id="@+id/home_forget_pwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊으셨나요?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pwd_underscore_view"/>

    <TextView
        android:id="@+id/home_login_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:background="#D3D3D3"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_forget_pwd_tv"
        />

    <ImageButton
        android:id="@+id/log_in_kakao_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_narrow"
        android:background="#f9e000"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_login_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/home_login_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/home_login_tv"
        app:layout_constraintStart_toStartOf="@id/home_login_tv"
        app:layout_constraintTop_toBottomOf="@id/log_in_kakao_login_button"/>


    <TextView
        android:id="@+id/home_not_a_member_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원이 아니신가요?"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_login_underscore_view"/>

    <TextView
        android:id="@+id/home_sign_up_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:background="@drawable/edge_for_textview"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_not_a_member_tv" />

    <Button
        android:id="@+id/login_to_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필로(프로필이미지관련개발중)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>